page {
    background-color: #f5f6f7;
    font-family: PingFangSC-Regular,"PingFang SC","Helvetica Neue",Helvetica,Microsoft YaHei,Arial,sans-serif;
    font-size: 28rpx;
    line-height: 1;
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
    min-height: 100%;
    position: relative;
}

.page {
    box-sizing: border-box;
    position: relative;
}

image {
    max-width: 100%;
}

button,form,icon,input,label,navigator,slider,switch,text,textarea,view {
    box-sizing: border-box;
}

scroll-view {
    height: 100%;
}

.clearfix:after,.clearfix:before {
    content: " ";
    display: table;
}

.clearfix:after {
    clear: both;
}

.block {
    display: block;
}

.inline-block {
    display: inline-block;
}

.pull-left {
    float: left;
}

.pull-right {
    float: right;
}

.text-left {
    text-align: left;
}

.text-right {
    text-align: right;
}

.text-center {
    text-align: center;
}

.transparent-bg {
    background-color: transparent;
}

.empty {
    color: #999;
    text-align: center;
    margin-top: 60rpx;
}

.bold {
    font-weight: 700;
    display: inline;
}

.vertical-middle {
    display: inline-block;
    vertical-align: middle;
}

.shadow {
    box-shadow: 0 0 10px 0 rgba(0,0,0,.5);
}

.deleted {
    text-decoration: line-through;
}

.img-responsive {
    display: block;
    width: 100%;
    max-width: 100%;
}

.loading__more {
    margin: 50rpx 0;
    font-size: 24rpx;
    color: #ddd;
    text-align: center;
}

button.btn-slim {
    background: 0 0;
    margin: 0 auto;
    width: 62.5%;
    display: block;
    line-height: 2;
    font-size: 22rpx;
}

.share-alert {
    position: fixed;
    bottom: 0;
    left: 0;
    top: 0;
    right: 0;
    width: 100%;
    background-color: rgba(0,0,0,.75);
    z-index: 100;
}

.share-alert .share-alert-content {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    padding: 30rpx;
    color: #666;
    font-size: 22rpx;
    background-color: #fff;
}

.share-alert .share-alert-content.show {
    transform: translate3d(0,0,0);
}

.share-alert .title {
    font-size: 32rpx;
}

.share-alert .share-content {
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.share-alert .share-item {
    flex: 1;
    text-align: center;
}

.share-alert .share-item image {
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 20rpx;
}

.share-alert button.share-item {
    border: 0 none;
    color: #666;
    line-height: initial;
    background-color: transparent;
    font-size: 22rpx;
    margin: 0;
    padding: 0;
}

.layout-row {
    position: relative;
    width: 100%;
    display: flex;
    align-content: center;
    align-items: center;
    justify-content: center;
}

.layout-row .flex__item_1 {
    flex: 1;
}

.btn__fixed_wrap {
    background: #fff;
    box-shadow: 0 -2px 8px 0 rgba(0,0,0,.05);
    padding: 28rpx 32rpx;
}

.present__point_confirm {
    font-size: 32rpx;
    color: #212121;
    line-height: 48rpx;
}

.highlight {
    display: inline;
    color: #c7aa81;
}

.panel__container {
    background-color: #fff;
    margin: 32rpx 0;
    border-radius: 2rpx;
    overflow: hidden;
}

.native__button {
    position: relative;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    line-height: 48rpx;
    padding: 20rpx 0;
    background-color: #c7aa81;
    border: 0 none;
    border-radius: 2rpx;
}

.native__button.disabled {
    background: #ebeced;
    color: #bfbfbf;
}

.native__button::after {
    border: none;
}

.page__container {
    margin: 32rpx;
}

.mask__container {
    position: fixed;
    z-index: 99999;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(245,246,247,.9);
}

.mask__container .status__wrap {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%,-50%,0);
    text-align: center;
}

.mask__container .status__wrap image {
    display: block;
    width: 220rpx;
    margin-bottom: 8rpx;
}

.mask__container .status__wrap .status_action {
    display: inline-block;
    color: #fff;
    padding: 0 20rpx;
    font-size: 24rpx;
    line-height: 20px;
}

.mask__container .status__wrap .status_action.fail {
    background-image: linear-gradient(-134deg,#f9927a 0,#fb5050 100%);
    border-radius: 4px;
}

.point__header {
    position: relative;
    overflow: hidden;
    background: #fff url(https://sunrisedutyfree-weixin.oss-cn-shanghai.aliyuncs.com/static/bg_texture_home_b.png) no-repeat center bottom;
    background-size: 100% 120rpx;
    width: 100%;
    height: 340rpx;
}

.point__header .header__inner {
    margin: 60rpx;
    color: #c7aa81;
    line-height: 48rpx;
    font-size: 32rpx;
    font-weight: 700;
    text-align: left;
}

.point__header .header__inner .title {
    font-weight: 400;
}

.point__header .header__inner .nums {
    margin-top: 24rpx;
    font-size: 80rpx;
    font-family: DIN-Next-LT-Pro-Bold-Condensed;
}

.point__header .point__remain {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    font-size: 24rpx;
    line-height: 40rpx;
    text-align: center;
    z-index: 9;
}

.point__header .point__remain .inline-block {
    padding: 10rpx 0;
}

.point__header .point__remain .point__remain_nums {
    flex: 1;
    background: #c7aa81;
    color: #fff;
}

.point__header .point__remain .point__tips {
    flex: 2;
    background: rgba(255,255,255,.8);
    color: #c7aa81;
}

.point__list_wrap {
    position: relative;
}

.point__list_wrap .navigator__item {
    position: relative;
    overflow: hidden;
    padding: 50rpx 60rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
}

.point__list_wrap .navigator__item image {
    width: 48rpx;
    vertical-align: middle;
}

.point__list_wrap .navigator__item .navigator__item_text {
    flex: 4;
}

.point__list_wrap .navigator__item .navigator__item_text view {
    margin-left: 32rpx;
}

.point__list_wrap .navigator__item .navigator__item_arrow {
    flex: 1;
}

.point__list_wrap .navigator__text_item {
    position: relative;
    overflow: hidden;
    padding: 30rpx 60rpx;
    background-color: #fff;
}

.present__point_flush {
    color: #c7aa81;
}