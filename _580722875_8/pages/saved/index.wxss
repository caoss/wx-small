page {
    background: #fff;
}

.canvas {
    position: fixed;
    top: -99999rpx;
    width: 647px;
    height: 1000px;
}

.shareImage {
    display: block;
    width: 600rpx;
    height: 600rpx;
    margin: 90rpx auto;
}

.adWrapper {
    width: 600rpx;
    margin: 10rpx auto;
}

.buttons {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 120rpx;
    color: #000;
    background-color: #fff;
    display: flex;
    font-size: 30rpx;
    justify-content: center;
    padding-bottom: 68rpx;
}

.item {
    position: relative;
    width: 50%;
    text-align: center;
    padding-top: 30rpx;
    line-height: 70rpx;
}

.item-icon {
    width: 80rpx;
    height: 80rpx;
    display: block;
    margin: auto;
}

.cover {
    position: absolute;
    z-index: 20;
    width: 100%;
    height: 100%;
    top: 0;
    opacity: 0;
}