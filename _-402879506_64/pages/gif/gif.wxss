page {
    height: 100%;
    position: relative;
    overflow: hidden;
    background-color: #000;
}

.prepare {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 100%;
    height: 100%;
    background-color: #000;
}

.showSaveHint {
    position: fixed;
    width: 100%;
    height: 50%;
    bottom: 0;
}

.gifShow {
    margin: auto;
    width: 320rpx;
    height: 80rpx;
    border-color: #616161;
    border-width: 10rpx;
    border-style: solid;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translateY(-50%) translateX(-50%);
}

.operHint {
    width: 100%;
    text-align: center;
    color: whitesmoke;
    position: absolute;
    font-size: small;
    bottom: 230rpx;
}

.saveBtn {
    width: 426rpx;
    height: 96rpx;
    line-height: 96rpx;
    border-radius: 45rpx;
    color: white;
    background-color: #006AFF;
    position: absolute;
    margin-left: 0rpx;
    margin-right: 0rpx;
    bottom: 100rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
}

.saveBtn:active {
    background-color: #004ADF;
}

.dlg {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 560rpx;
    transition-duration: 0.5s;
}

.goHeiKeJiBtn {
    width: 240rpx;
    height: 74rpx;
    line-height: 74rpx;
    border-radius: 100rpx;
    color: white;
    background-color: #006AFF;
    position: absolute;
    margin-left: 0rpx;
    margin-right: 0rpx;
    bottom: 24rpx;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    font-size: 36rpx;
}

.dlgBg {
    position: relative;
    width: 100%;
    margin-top: 65rpx;
}

.closePannel {
    position: absolute;
    right: 0;
    width: 40rpx;
    padding-left: 20rpx;
}

.closeLine {
    background: #737373;
    height: 100rpx;
    width: 1rpx;
    margin: 0 auto;
    display: block;
}

.closeBtn {
    width: 40rpx;
    height: 40rpx;
    display: block;
}