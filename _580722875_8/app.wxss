button[type="primary"] {
    background-color: #D01125;
    color: #fff;
}

button[disabled][type="primary"] {
    background-color: rgb(202,116,125);
}

.button-hover[type="primary"] {
    background-color: rgb(204,13,32);
}

.contentWrapper {
    width: 670rpx;
    height: 670rpx;
    margin: auto;
    top: 0;
    bottom: 25%;
    display: flex;
    justify-content: space-around;
}

.content {
    background-color: #fff;
    flex: 1;
    box-shadow: 0 0 3px 1px #333;
}

.selectorWrapper {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-around;
}

.actionWrapper {
    position: fixed;
    width: 100%;
    bottom: 0;
    height: 100rpx;
    background-color: #fff;
}

.action {
    color: rgb(202,41,58);
    display: flex;
    flex-direction: row;
    color: #000;
    height: 100%;
}

.button {
    font-size: 16px;
    line-height: 85rpx;
}

.button.active {
    background-color: #D01125;
    color: #fff;
}

.actionIcon {
    position: relative;
    flex: 1;
    text-align: center;
    display: flex;
    height: 100%;
    justify-content: center;
    line-height: 100rpx;
    font-size: 14px;
    color: #2c2c2c;
}

.actionIcon>image {
    align-self: center;
    width: 55rpx;
    height: 55rpx;
    padding: 0 10rpx;
    vertical-align: middle;
}

.actionIcon>image.save {
    width: 50rpx;
    height: 50rpx;
}

.actionIcon>image.hat {
    width: 75rpx;
    height: 75rpx;
}

.actionIcon.active::after {
    content: '';
    width: 0;
    height: 0;
    border-style: solid;
    border-width: 0 20rpx 20rpx 20rpx;
    border-color: transparent transparent #fff transparent;
    position: absolute;
    top: -18rpx;
    left: 50%;
    margin-left: -20rpx;
}

.listWrapper {
    position: absolute;
    left: 0;
    right: 0;
    height: 500rpx;
    background-color: rgba(255,255,255,.8);
}

.menuWrapper {
    padding: 0 37.5rpx;
    font-size: 16px;
    color: #333;
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}

.menu {
    display: flex;
    width: 100%;
    margin-top: 25rpx;
    padding-right: 37.5rpx;
}

.menu:last-child .menuContent {
    border: 0;
}

.menuContent {
    margin-left: 15rpx;
    padding-bottom: 25rpx;
    flex: 1;
    color: #2c2c2c;
    border-bottom: 1px solid #515151;
}

.add {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.tjcp {
    background: rgba(255,255,255,0.1);
    overflow: hidden;
    width: 690rpx;
    margin: 0 auto;
    color: rgba(255,255,255,0.7);
    font-size: 30rpx;
    border-radius: 20rpx;
    padding-top: 15rpx;
}

.tjcp .tip {
    overflow: hidden;
}

.tjcp .tip image {
    width: 30rpx;
    display: block;
    float: left;
    padding-top: 7.5rpx;
}

.tjcp .tip text {
    display: block;
    float: left;
    color: #000;
}

.tjcp .list_box {
    width: 120rpx;
    overflow: hidden;
    float: left;
    margin: 40rpx 26rpx;
    font-size: 24rpx;
    color: rgba(255,255,255,0.7);
    text-align: center;
}

.tjcp .list_box image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
    margin-bottom: 10rpx;
}

.tjcp .list_box text {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #000;
}