.container {
    background: #000000;
    min-height: 100vh;
    width: 100%;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

.container .scrollTxt {
    transform: rotate(90deg);
    display: block;
    line-height: 0rpx;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1;
}

.container .scrollTxt .text {
    color: #ffffff;
    font-size: 72rpx;
    width: 100%;
    height: 750rpx;
    text-align: center;
    line-height: 750rpx;
    display: inline-block;
}

.container .scrollTxt .text text {
    font-family: "heiTi";
}

@-webkit-keyframes zimu1 {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-100%);
    }
}

@keyframes zimu1 {
    0% {
        transform: translateX(100%);
    }

    100% {
        transform: translateX(-100%);
    }
}

.footBox {
    width: 750rpx;
    height: 80rpx;
    position: fixed;
    left: 0;
    bottom: -150rpx;
    transition: all 0.25s linear;
    z-index: 2;
    text-align: center;
}

.footBox.active {
    bottom: 0;
}

.footBox.opacity {
    opacity: 1;
}

.footBox .fl {
    width: 60rpx;
    height: 60rpx;
    margin: 10rpx;
    background: rgba(255,255,255,0.3);
    float: left;
    border-radius: 50%;
    text-align: center;
}

.footBox .fl image {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footBox .inputBox {
    width: 60rpx;
    height: 60rpx;
    padding: 0rpx;
    line-height: 58rpx;
    border-radius: 30rpx 30rpx;
    border: 1rpx solid #999999;
    box-sizing: border-box;
    font-size: 24rpx;
    float: none;
    color: #ffffff;
    text-align: center;
    margin: 10rpx 25rpx;
    display: inline-block;
}

.footBox .FontBox {
    width: 60rpx;
    height: 60rpx;
    line-height: 58rpx;
    margin: 10rpx;
    background: rgba(255,255,255,0.3);
    float: right;
    border-radius: 50%;
    text-align: center;
    color: #ffffff;
    font-size: 24rpx;
    position: relative;
}

.footBox .FontBox .fontList {
    width: 260rpx;
    height: 60rpx;
    position: absolute;
    right: 0;
    top: -80rpx;
    text-align: right;
    display: none;
}

.footBox .FontBox .fontList .fontItem {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 58rpx;
    border: 1rpx solid #333333;
    display: inline-block;
    margin-left: 20rpx;
    background: #333333;
}

.footBox .FontBox .fontList.active {
    display: block;
}

.footBox .colorBox {
    width: 750rpx;
    height: 80rpx;
    position: absolute;
    left: 0;
    top: 180rpx;
}

.footBox .colorBox .items {
    width: 750rpx;
    height: 80rpx;
    text-align: center;
}

.footBox .colorBox .items .item {
    width: 60rpx;
    height: 60rpx;
    border-radius: 30rpx;
    display: inline-block;
    margin: 0 45rpx;
}

.footBox .colorBox.active {
    opacity: 1;
    top: -80rpx;
}

.container.active {
    animation: bgNeon2 3s infinite;
}

.container .scrollTxt text.active {
    animation: neon2 3s infinite;
}

