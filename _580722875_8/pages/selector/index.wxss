page {
    background-color: #fff;
}

.Cropper {
    margin-top: 20rpx;
    background-color: #929292;
}

.smallText {
    text-decoration: underline;
    font-size: 26rpx;
    color: #777;
    text-align: center;
    margin-top: 20rpx;
}

.Popup {
    position: fixed;
    background-color: rgba(0,0,0,.5);
    width: 100%;
    height: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 999;
}

.Popup .content {
    box-sizing: border-box;
    padding: 30rpx;
    border-radius: 6rpx;
    width: 700rpx;
    margin: 100rpx auto;
}

.Popup .title {
    text-align: center;
    margin-bottom: 20rpx;
    padding: 20rpx 0;
    font-size: 36rpx;
    color: #050505;
    border-bottom: 3rpx solid #DDD;
}

.Popup .authButton {
    margin-top: 20rpx;
}

.Avatars {
    padding: 0 50rpx;
    padding-bottom: 20rpx;
    background-color: #161616;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.AvatarItem {
    width: 100rpx;
    height: 100rpx;
}

.AvatarItem.active>image {
    border: 5rpx solid #FA0056;
}

.AvatarItem>image {
    box-sizing: border-box;
    border-radius: 6rpx;
    width: 100rpx;
    height: 100rpx;
}

.Bottom {
    background-color: #929292;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.Container {
    width: 650rpx;
    margin: 20rpx auto;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.AdWrapper {
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.Tab {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.defaultButton,.primaryButton {
    color: #fff;
    font-size: 28rpx;
    height: 86rpx;
    line-height: 86rpx;
    text-align: center;
    border-radius: 6rpx;
}

.defaultButton {
    width: 220rpx;
    background-color: #4995cf;
}

.primaryButton {
    width: 390rpx;
    background-image: linear-gradient(90deg,#ed662c 0%,#ff9800 100%);
}

.icon-change {
    width: 26rpx;
    height: 25rpx;
    margin-left: 15rpx;
    vertical-align: middle;
}

.icon-arrow-r {
    width: 17rpx;
    height: 21rpx;
    margin-left: 18rpx;
    vertical-align: middle;
}